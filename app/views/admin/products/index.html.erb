<h1 class="text-center">Products:</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
  </tr>
  </thead>

  <% @products.each do |product| %>
    <tbody>
    <tr>
      <td><%= image_tag(product.image.url, class: "product-show", alt: 'Image') if product.image? %> </td>
      <td><%= product.title %></td>

      <td><%= product.description %></td>
      <td><%= product.price %></td>
    </tr>

    <tr>
      <td colspan="4"><%= link_to 'Edit Product', edit_product_path(product)%></td>
    </tr>
    </tbody>
  <% end %>
  </table>


<%= link_to 'New Product', new_product_path %>
<%= link_to "Back", :back %>
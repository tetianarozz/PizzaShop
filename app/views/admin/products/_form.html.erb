<%= form_for product do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <% if product.image? %>
      <%= label_tag :remove_image %>
      <%= f.check_box :remove_image %>
    <% else %>
      <%= f.label :image %>
      <%= f.file_field :image %>
    <% end %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :category_id %>
    <%= f.text_field :category_id %>
  </div>

  <%= f.submit %>
<% end %>

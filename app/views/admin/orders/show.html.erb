<h1>Order:</h1>

  <h2 class="text-center">Customer information: </h2>

<div class="table-responsive mt-4">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Date/Time of creation</th>
      <th>Status</th>
      <th>Name</th>
      <th>Address</th>
      <th>Number</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.id %></td>
        <td><%= @order.formatted_created_at %></td>
        <td>Status</td>
        <td><%= @order.user_name %></td>
        <td><%= @order.user_address %></td>
        <td><%= @order.user_number %></td>
        <!--                <td class="table-action"><%#= render 'admin_panel/partials/actions', entity: entity %> </td>-->
      </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive mt-4">
  <h2 class="text-center">Products: </h2>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total price</th>
    </tr>
    </thead>


    <tbody>
      <% @order.line_items.each do |p| %>
        <tr>
            <td><%= p.product.title %></td>
            <td><%= p.quantity %></td>
            <td><%= p.product.price %> $</td>
            <td><%= p.total_price %> $</td>
        </tr>
      <% end %>

      <tr>
        <th>Order total price:</th>
        <td></td><td></td>
        <td colspan="3" ><%= @order.total_price %> $</td>
      </tr>
    </tbody>
  </table>
</div>
